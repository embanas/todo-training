{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "paths": {
      "employees": ["dist/employees/employees", "dist/employees"],
      "messages": ["dist/messages/messages", "dist/messages"],
      "@employees": ["projects/employees/src/index.ts"],
      "@employeeDetail": ["projects/employees/src/index.ts"],
      "@contactForm": ["projects/messages/src/index.ts"],
      "@navigation": ["projects/navigation/src/index.ts"]
    },
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": ["es2018", "dom"]
  },
  "angularCompilerOptions": { "enableI18nLegacyMessageIdFormat": false }
}
